<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarroActivity">

    <ImageView
        android:id="@+id/imgCarro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tictactoe" />


    <TextView
        android:id="@+id/tituloCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgCarro"
        android:layout_centerHorizontal="true"
        android:text="Titulo"
        android:textSize="30dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/descripcionCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloCarro"
        android:layout_centerHorizontal="true"
        android:text="Descripcion"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/precioCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descripcionCarro"
        android:layout_centerHorizontal="true"
        android:text="Precio" />

</RelativeLayout>